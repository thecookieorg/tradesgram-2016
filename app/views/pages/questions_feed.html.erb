<div class="row">
	<div class="col-md-3">
		<p>Knowledge Base</p>
		<ul>
			<% @categories.each do |category| %>
				<li><%= link_to "#{category.name}", category %>
			<% end %>
		</ul>
	</div>
	<div class="col-md-6">
		<% @questions.each do |question| %>
			<h3><%= question.title %></h3>
			<small>Asked <%= time_ago_in_words(question.created_at) %> ago by <%= question.user.full_name %>.</small>
			<p><%= question.body %></p>
			<%= link_to question do %>
				<span class="glyphicon glyphicon-pencil"></span> Can you answer this question?
			<% end %>
			<hr>
		<% end %>
	</div>
	<div class="col-md-3">
		<p>Update your profile</p>
	</div>
</div>		

