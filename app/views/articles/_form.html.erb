<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body %>
    <div class="field">
  		<%= f.label :category_id %>
  		<%= f.collection_select :category_id, Category.all, :id, :name %>
	</div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
